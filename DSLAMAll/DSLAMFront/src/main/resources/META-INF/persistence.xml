<?xml version="1.0" encoding="UTF-8" ?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="dslam"	transaction-type="RESOURCE_LOCAL">

 		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Registered entities -->
		<class>com.imotion.dslam.bom.data.DSLAMBOProject</class>
		<class>com.imotion.dslam.bom.data.DSLAMBOFile</class>
		<class>com.imotion.dslam.bom.data.DSLAMBOProcess</class>
		<class>com.imotion.dslam.bom.data.CRONIOBONode</class>
		<class>com.imotion.dslam.bom.data.CRONIOBOMachineProperties</class>
		<class>com.imotion.dslam.bom.data.CRONIOBOUserPreferences</class>
		<class>com.imotion.dslam.bom.data.CRONIOBOPreferences</class>
		<class>com.imotion.dslam.bom.data.CRONIOBOExecution</class>
		<class>com.imotion.dslam.bom.data.CRONIOBOUser</class>

		<properties>

			<!-- =============================== -->
			<!-- ===========DATABASE============ -->
			<!-- =============================== -->

			<!-- MySQL -->
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/dslamdbtest" />
			
			<!-- CLOUDBEE -->
			<!-- <property name="hibernate.connection.url" value="jdbc:mysql://us-cdbr-cb-east-01.cleardb.net:3306/cb_dslamdb" /> -->
			
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>


			<!-- =============================== -->
			<!-- =============LOGIN============= -->
			<!-- =============================== -->
			<property name="hibernate.connection.user" value="dslamuser" />
			<property name="hibernate.connection.password" value="dslampassword" />
			
			<!-- CLOUDBEE -->
			<!-- <property name="hibernate.connection.user" value="b3824f64a6f0d8" /> -->
			<!-- <property name="hibernate.connection.password" value="e5a71044" /> -->

			<!-- =============================== -->
			<!-- ===========OTHER PROPS========== -->
			<!-- =============================== -->
			<!-- updates automatically scheme, NOT RECOMMENDED IN PRODUCTION.Check 
				grants of user -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true" />
         	<property name="hibernate.format_sql" value="true" />
			<!-- autocommit not recommended by Hibernate -->
			<!-- <property name="hibernate.connection.autocommit" value="false" /> -->

			<!-- =============================== -->
			<!-- ==============POOL============= -->
			<!-- =============================== -->
			<!-- Connection pools Hibernate-C3P0 -->
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="50" />
			<property name="hibernate.c3p0.timeout" value="100" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="mongoDslam" transaction-type="RESOURCE_LOCAL">
	    <!-- Registered entities -->
	    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.imotion.dslam.bom.data.CRONIOBOLog</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
<!--             <property name="eclipselink.jpa.uppercase-column-names" value="true"/> -->
            <property name="eclipselink.target-database" value="org.eclipse.persistence.nosql.adapters.mongo.MongoPlatform"/>
            <property name="eclipselink.nosql.connection-spec" value="org.eclipse.persistence.nosql.adapters.mongo.MongoConnectionSpec"/>
            <property name="eclipselink.nosql.property.mongo.port" value="27017"/>
            <property name="eclipselink.nosql.property.mongo.host" value="localhost"/>
            <property name="eclipselink.nosql.property.mongo.db" value="executionLogs"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
        </properties>
    </persistence-unit>
	
</persistence>
